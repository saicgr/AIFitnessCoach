# GCP_CREDENTIALS_JSON_B64=<base64-encoded service account JSON>

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/fitness_coach.db

# RAG Configuration
CHROMA_PERSIST_DIR=./data/chroma
RAG_TOP_K=5
RAG_MIN_SIMILARITY=0.7
