<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:gravity="center">

    <!-- Share Icon with glow -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/widget_share_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ“¤"
            android:textSize="20sp"
            android:includeFontPadding="false" />
    </FrameLayout>

    <!-- Share Workout Button -->
    <TextView
        android:id="@+id/share_workout_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Share Workout"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/widget_button_primary"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Quick tip -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your latest workout"
        android:textSize="10sp"
        android:textColor="#64748B"
        android:layout_marginTop="8dp" />
</LinearLayout>
