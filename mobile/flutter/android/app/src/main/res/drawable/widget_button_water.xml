<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main gradient button -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0EA5E9"
                android:centerColor="#06B6D4"
                android:endColor="#22D3EE"
                android:angle="135" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Top highlight -->
    <item
        android:top="1dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#67E8F9"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:topLeftRadius="18dp" android:topRightRadius="18dp" />
        </shape>
    </item>
</layer-list>
