<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#15803D"
                android:endColor="#059669"
                android:angle="135" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    <!-- Main button -->
    <item android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22C55E"
                android:centerColor="#10B981"
                android:endColor="#059669"
                android:angle="135" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    <!-- Top highlight -->
    <item
        android:top="1dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="24dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4ADE80"
                android:endColor="#00000000"
                android:angle="90" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</layer-list>
