<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Wear OS Feature Declaration -->
    <uses-feature android:name="android.hardware.type.watch" />

    <!-- Health & Sensors -->
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- Background Operation -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_HEALTH" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Voice Input -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Haptics -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Network (for standalone mode) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Boot completed for passive monitoring restart -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Health Connect permissions -->
    <uses-permission android:name="android.permission.health.READ_STEPS" />
    <uses-permission android:name="android.permission.health.READ_DISTANCE" />
    <uses-permission android:name="android.permission.health.READ_TOTAL_CALORIES_BURNED" />
    <uses-permission android:name="android.permission.health.READ_HEART_RATE" />
    <uses-permission android:name="android.permission.health.READ_SLEEP" />
    <uses-permission android:name="android.permission.health.WRITE_EXERCISE" />
    <uses-permission android:name="android.permission.health.WRITE_STEPS" />
    <uses-permission android:name="android.permission.health.WRITE_DISTANCE" />
    <uses-permission android:name="android.permission.health.WRITE_TOTAL_CALORIES_BURNED" />

    <application
        android:name=".FitWizWearApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">

        <!-- Standalone capable declaration -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Exercise Foreground Service -->
        <service
            android:name=".health.ExerciseService"
            android:foregroundServiceType="health"
            android:exported="false" />

        <!-- Passive Health Data Receiver Service -->
        <service
            android:name=".health.PassiveDataReceiver"
            android:exported="true"
            android:permission="com.google.android.wearable.healthservices.permission.PASSIVE_DATA_BINDING">
            <intent-filter>
                <action android:name="hs.passivemonitoring.BIND" />
            </intent-filter>
        </service>

        <!-- Boot Completed Receiver -->
        <receiver
            android:name=".health.BootCompletedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Debug Credentials Receiver (debug builds only) -->
        <receiver
            android:name=".debug.DebugCredentialsReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.aifitnesscoach.wearos.DEBUG_SET_CREDENTIALS" />
                <action android:name="com.aifitnesscoach.wearos.DEBUG_CLEAR_CREDENTIALS" />
                <action android:name="com.aifitnesscoach.wearos.DEBUG_CHECK_CREDENTIALS" />
            </intent-filter>
        </receiver>

        <!-- Data Layer Listener Service -->
        <service
            android:name=".data.sync.DataLayerListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data
                    android:host="*"
                    android:pathPrefix="/fitwiz"
                    android:scheme="wear" />
            </intent-filter>
        </service>

        <!-- Workout Tile -->
        <service
            android:name=".tiles.WorkoutTileService"
            android:exported="true"
            android:label="@string/workout_tile_label"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
            <meta-data
                android:name="androidx.wear.tiles.PREVIEW"
                android:resource="@drawable/tile_workout_preview" />
        </service>

        <!-- Fasting Tile -->
        <service
            android:name=".tiles.FastingTileService"
            android:exported="true"
            android:label="@string/fasting_tile_label"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
            <meta-data
                android:name="androidx.wear.tiles.PREVIEW"
                android:resource="@drawable/tile_fasting_preview" />
        </service>

        <!-- Calories Tile -->
        <service
            android:name=".tiles.CaloriesTileService"
            android:exported="true"
            android:label="@string/calories_tile_label"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
            <meta-data
                android:name="androidx.wear.tiles.PREVIEW"
                android:resource="@drawable/tile_calories_preview" />
        </service>

        <!-- Disable default WorkManager initialization (using Hilt Configuration.Provider) -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>
